<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="12.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="SwapXunitTestAdapterLibs" AfterTargets="_ComputeAppxPackagePayload" BeforeTargets="_GenerateAppxManifest">
    <Message Text="Swapping xUnit.net Test Adapter Libraries" />

    <ItemGroup>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)device\xunit.runner.visualstudio.testadapter.dll">
        <TargetPath>xunit.runner.visualstudio.testadapter.dll</TargetPath>
      </xUnitLibs>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)device\xunit.runner.visualstudio.testadapter.pri" Condition="Exists('$(MSBuildThisFileDirectory)device\xunit.runner.visualstudio.testadapter.pri')">
        <TargetPath>xunit.runner.visualstudio.testadapter.pri</TargetPath>
      </xUnitLibs>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)device\xunit.runner.utility.dll">
        <TargetPath>xunit.runner.utility.dll</TargetPath>
      </xUnitLibs>
      <xUnitLibs Include="$(MSBuildThisFileDirectory)device\xunit.runner.utility.pri" Condition="Exists('$(MSBuildThisFileDirectory)device\xunit.runner.utility.pri')">
        <TargetPath>xunit.runner.utility.pri</TargetPath>
      </xUnitLibs>

      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.visualstudio.testadapter.dll'"/>
      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.visualstudio.testadapter.pdb'"/>
      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.utility.dll'"/>
      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.utility.pri'"/>
      <xUnitLibsToRemove Include="@(AppxPackagePayload)" Condition="'%(TargetPath)' == 'xunit.runner.utility.pdb'"/>

      <AppxPackagePayload Remove="@(xUnitLibsToRemove)" />
      <AppxPackagePayload Include="@(xUnitLibs)" />
    </ItemGroup>

  </Target>
</Project>
